{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "types": ["vite/client", "node"],
        "moduleResolution": "node",
        "lib": ["es2017", "dom"],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noEmit": true,
        "checkJs": false,
        "jsx": "preserve",
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": true,
        "baseUrl": ".",
        "paths": {
            "games/*": ["./resources/js/games/*"],
            "library/*": ["./resources/js/library/*"],
            "tombraid/*": ["./resources/js/games/tombraid/*"],
            "store/*": ["./resources/js/store/modules/*"],
            "pages/*": ["./resources/js/pages/*"],
            "services/*": ["./resources/js/services/*"],
            "types/*": ["./resources/js/types/*"]
        }
    },
    "include": ["resources/js/**/*"]
}
